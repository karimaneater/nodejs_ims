<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.6.7/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.6.7/dist/sweetalert2.min.js"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="container mt-5">
            <div class="d-flex justify-content-between">
                <label for=""><h3>Inventory Management System</h3></label>
                <span><button class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#createModal">Add Item</button></span>
            </div>
            <script>
                // This is how you use JavaScript logic inside the EJS file for conditional rendering
                const urlParams = new URLSearchParams(window.location.search);

                 if (urlParams.has("success")) { 
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: urlParams.get("success"),
                    });
                 } 
        
                 if (urlParams.has("error")) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: urlParams.get("error"),
                    });
                 } 
            </script>
            <table class="table text-middle text-center" id="dataTable">
                <thead class="table-light">
                    <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Price</th>
                    <th scope="col">Description</th>
                    <th scope="col">Created At</th>
                    <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% items.forEach(item => { %>
                        <tr>
                            <td><%- item.name %></td>
                            <td><%- item.category %></td>
                            <td><%- item.quantity %></td>
                            <td>&#8369; <%- item.price %></td>
                            <td><%- item.description %></td>
                            <td><%- item.createdAt.toDateString() %></td>
                            <td>
                                <button data-bs-toggle="modal" data-bs-target="#editModal-<%- item.id %>" class="btn btn-sm btn-primary">Edit</button>
                                <button data-bs-toggle="modal" data-bs-target="#deleteModal-<%- item.id %>" class="btn btn-sm btn-danger">Delete</button>
                               
                            </td>
                        </tr>
                        <!-- -------------------------------------- -->
                         <!-- Delete Modal  -->
                         <div class="modal fade" id="deleteModal-<%- item.id %>" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <h1 class="modal-title fs-5" id="exampleModalLabel">Add Item</h1>
                                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete this item? 
                                    </div>
                                   
                                    <div class="modal-footer">
                                        <form action="/items/<%- item.id %>?_method=DELETE" method="POST">
                                            <button type="submit" class="btn btn-primary btn-sm">Submit</button>
                                        </form>
                                    </div>     
                              </div>
                            </div>
                          </div>

                       <!-- ---------------------------- -->
                        <!--Edit Modal -->
                            <div class="modal fade" id="editModal-<%- item.id %>" tabindex="-1" aria-labelledby="editModalLabel-<%- item.id %>" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Add Item</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                        <div class="modal-body">
                                            <form action="/items/<%- item.id %>?_method=PUT" method="POST">
                                                <div class="mb-3 form-floating">
                                                <input type="text" class="form-control" id="Name-<%- item.id %>" placeholder="Name" value="<%- item.name %>" name="name" required>
                                                <label for="Name-<%- item.id %>">Name</label>
                                                </div>
                                                <div class="mb-3 form-floating">
                                                    <input type="text" class="form-control" id="Category-<%- item.id %>" placeholder="Category" value="<%- item.category %>" name="category" required>
                                                    <label for="Category-<%- item.id %>">Category</label>
                                                </div>
                                                <div class="mb-3 form-floating">
                                                    <input type="number" class="form-control" id="Quantity-<%- item.id %>" placeholder="Quantity" value="<%- item.quantity %>" name="quantity">
                                                    <label for="Quantity-<%- item.id %>">Quantity</label>
                                                </div>
                                                <div class="mb-3 form-floating">
                                                    <input type="number" class="form-control" id="Price-<%- item.id %>" placeholder="Price" value="<%- item.price %>" name="price" required>
                                                    <label for="Price-<%- item.id %>">Price</label>
                                                </div>
                                                <div class="mb-3 form-floating">
                                                    <input type="text" class="form-control" id="Description-<%- item.id %>" placeholder="Description" value="<%- item.description %>" name="description">
                                                    <label for="Description-<%- item.id %>">Description</label>
                                                </div>
                                        </div>
                                                <div class="modal-footer">
                                                    <button type="submit" class="btn btn-primary btn-sm">Submit</button>
                                                </div>
                                            </form>
                                </div>
                                </div>
                            </div>
                        <!-- -------------------------------- -->
                    <% }) %>
                </tbody>
                </table>
        </div>
    </div>
    <%- include('createModal.ejs') %> 
</body>

<script src="/js/jquery-3.7.1.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/dataTables.js"></script>
<script src="/js/dataTables.bootstrap5.js"></script>
<script>
    $(document).ready(function() {
        $('#dataTable').DataTable();
    });
</script>
</html>