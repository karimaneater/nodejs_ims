<!--View Modal -->
<div class="modal fade" id="viewModal-<%- item.id %>" tabindex="-1" aria-labelledby="viewModalLabel-<%- item.id %>" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">View Item</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
            <div class="modal-body">
                <div class="mb-3 form-floating">
                <input type="text" class="form-control" id="Name-<%- item.id %>" placeholder="Name" value="<%- item.name %>" name="name" disabled>
                <label for="Name-<%- item.id %>">Name</label>
                </div>
                <div class="mb-3 form-floating">
                    <input type="text" class="form-control" id="Category-<%- item.id %>" placeholder="Category" value="<%- item.category %>" name="category" disabled>
                    <label for="Category-<%- item.id %>">Category</label>
                </div>
                <div class="mb-3 form-floating">
                    <input type="number" class="form-control" id="Quantity-<%- item.id %>" placeholder="Quantity" value="<%- item.quantity %>" name="quantity" disabled>
                    <label for="Quantity-<%- item.id %>">Quantity</label>
                </div>
                <div class="mb-3 form-floating">
                    <input type="number" class="form-control" id="Price-<%- item.id %>" placeholder="Price" value="<%- item.price %>" name="price" disabled>
                    <label for="Price-<%- item.id %>">Price</label>
                </div>
                <div class="mb-3 form-floating">
                    <input type="text" class="form-control" id="Description-<%- item.id %>" placeholder="Description" value="<%- item.description %>" name="description" disabled>
                    <label for="Description-<%- item.id %>">Description</label>
                </div>
            </div>
        </div>
    </div>
</div>